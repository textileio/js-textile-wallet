{
  "name": "@textile/wallet",
  "version": "0.2.1",
  "description": "Official Textile data wallet Javascript implementation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "yarn build",
    "test": "jest --no-watchman --config jestconfig.json",
    "lint": "npx eslint --fix --ext .mjs,.js,.jsx,.ts,.tsx src && echo 'Lint complete.'",
    "docs": "./node_modules/typedoc/bin/typedoc",
    "precommit": "yarn lint && yarn test",
    "preversion": "yarn docs; yarn precommit",
    "release": "yarn version --patch",
    "postversion": "git push --follow-tags",
    "browser": "webpack --mode production"
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 3.0.0",
    "yarn": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/textileio/js-textile-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/textileio/js-textile-wallet/issues"
  },
  "keywords": [
    "textile",
    "crypto",
    "wallet",
    "IPFS",
    "p2p"
  ],
  "author": "textile.io",
  "license": "MIT",
  "dependencies": {
    "bip39": "^2.5.0",
    "bs58": "^4.0.1",
    "crc": "^3.8.0",
    "create-hash": "^1.2.0",
    "create-hmac": "^1.1.7",
    "ed2curve": "^0.2.1",
    "tiny-secp256k1": "^1.1.2",
    "tweetnacl": "^1.0.1"
  },
  "devDependencies": {
    "@types/bip39": "^2.4.2",
    "@types/bs58": "^4.0.0",
    "@types/crc": "^3.4.0",
    "@types/create-hash": "^1.2.0",
    "@types/create-hmac": "^1.1.0",
    "@types/ed2curve": "^0.2.2",
    "@types/jest": "^24.0.11",
    "@types/tiny-secp256k1": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.5.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.18.2",
    "prettier-eslint": "^8.8.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.4.4",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.1.27",
    "typescript": "^3.5.3",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1"
  }
}
